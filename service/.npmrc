# Use a default registry
registry=https://registry.npmjs.org/

# Save exact versions instead of using caret (^) or tilde (~)
save-exact=true

# Reduce verbosity of logs (set to "verbose" if debugging)
loglevel=warn

# Disable sending anonymous usage stats to npm
metrics-registry=off
audit=false
fund=false

# Increase network timeouts for slow connections
fetch-timeout=60000
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Avoid running scripts automatically (security measure)
ignore-scripts=true
